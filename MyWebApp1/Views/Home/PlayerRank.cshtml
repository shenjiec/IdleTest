@model IEnumerable<MyWebApp1.Models.Player>

@{
    ViewBag.Title = "排行榜";
}
<h2 class="text-center mb-5">排行榜</h2>

<table class="table table-striped table-bordered table-hover shadow-sm rounded text-center">
    <thead class="table-dark">
        <tr>
            <th>名次</th>
            <th>玩家</th>
            <th>最高階段</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Select((value, index) => new { value, index }))
        {
            <tr>
                <td>@(item.index + 1)</td>
                <td>@Html.DisplayFor(m => item.value.PlayerName) - Lv.@Html.DisplayFor(m => item.value.Level)</td>
                <td>@Html.DisplayFor(m => item.value.BestStage)</td>
            </tr>
        }
    </tbody>
</table>